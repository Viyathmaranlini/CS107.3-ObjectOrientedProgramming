using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Even or Odd Number Checker");


        for (int i = 1; i <= 10; i++)
        {
            Console.Write($"Enter number {i}: ");
            int number = Convert.ToInt32(Console.ReadLine());


            string result = IsEven(number) ? "even" : "odd";


            Console.WriteLine($"Number {number} is {result}\n");
        }

        Console.ReadLine(); 
    }


    static bool IsEven(int number)
    {
        return number % 2 == 0;
    }
}
